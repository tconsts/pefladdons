{
  "name": "PEFL CrabVIP",
  "version": "2.0.27",
  "manifest_version": 3,

  "browser_specific_settings": {
    "gecko": {
      "id": "{4a500822-9c05-48e4-acac-15c41e8bd77c}"
    }
  },
  "action": {
     "default_icon": {
    	"36": "img/icon36.png",
    	"128": "img/icon128.png"
     },
     "default_popup": "popup.html",
     "default_title": "PEFL CrabVIP"
  },
  "icons": {
     "32": "img/icon32.png",
     "36": "img/icon36.png",
     "128": "img/icon128.png"
  },
  "content_scripts": [
    {
    "css": [ "css/css.css" ],
	"matches": [
		"https://pefl.ru/*",
		"https://pefl.org/*",
		"https://www.pefl.ru/*",
		"https://www.pefl.org/*"
	],
	"exclude_matches": [
		"*://*/auth.php*",
		"*://*/profile.php*",
		"*://*/loadplayer.php*"
	],
	"js": [ "crab.js" ],
	"run_at": "document_end"
    }
  ],
  "web_accessible_resources": [{
	"resources": [
		"img/*",
		"js/crab_funcs_db.js",
		"js/crab_funcs_std.js",
		"js/crab_funcs_pls.js",
		"js/crab_common.user.js",
		"js/crab_settings.user.js",
		"js/crab_sostav.user.js",
		"js/crab_player.user.js",
		"js/crab_contracts.user.js",
		"js/crab_team.user.js",
		"js/crab_div.user.js",
		"js/crab_schedule.user.js",
		"js/crab_school.user.js",
		"js/crab_finance.user.js",
		"js/crab_hist.user.js",
		"js/crab_dov.user.js",
		"js/crab_train.user.js",
		"js/crab_match.user.js",
		"js/crab_tournaments.user.js",
		"js/crab_adaptation.user.js",
		"js/crab_calendar.user.js",
		"js/crab_index.user.js",
		"js/crab_forum.user.js",
		"js/crab_ref.user.js",
		"js/crab_summary.user.js",
		"js/crab_new_sostav.user.js"
	],
	"matches": ["<all_urls>"],
 	"extension_ids": []
  }],
  "permissions":[],
  "host_permissions":[	
	"http://pefl.ru/*",
	"http://pefl.org/*",
	"http://www.pefl.ru/*",
	"http://www.pefl.org/*",
	"https://pefl.ru/*",
	"https://pefl.org/*",
	"https://www.pefl.ru/*",
	"https://www.pefl.org/*"
  ]
}
